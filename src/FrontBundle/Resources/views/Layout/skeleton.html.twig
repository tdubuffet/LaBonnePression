<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} - Au bon comptoir</title>


    <link href="{{ asset('/css/master.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.2/css/tether-theme-basic.min.css" rel="stylesheet">
</head>
<body class="{% block bodyClass %}{% endblock %}">

{% block header %}
    <div class="header">

        <div class="container">
            <div class="row">
                <a class="col-md-4 logo" href="{{ path('homepage') }}" tile="La Bonne Pression">Au bon comptoir</a>
                <div class="col-md-8 menu-account">
                    {% include 'FrontBundle:Default:header_account.html.twig' %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block wrapper %}{% endblock %}

<div class="container">

    {% block container %}{% endblock %}

</div>

<footer>

</footer>


<script type="text/javascript" src="{{ asset('/components/jquery/dist/jquery.min.js') }}"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.2/js/tether.min.js"></script>
<script type="text/javascript" src="{{ asset('/components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script type="text/javascript">
    var path = '{{ app.request.getSchemeAndHttpHost() }}';
</script>
{% block javascript %}
{% endblock %}

{% if app.environment == 'dev' %}
    <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
{% endif %}
</body>
</html>